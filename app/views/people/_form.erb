<form action="<%= people_form_action(@person) %>" method="post" class="<%= people_form_class(@person) %>">
  <% if !@error.nil? %>
    <p class="error-msg"><%= @error %></p>
  <% end %>
<div class="form-group">  
  
<input type="hidden" name="_method" value="<%= people_form_method(@person) %>" />
<div>
<label for="first_name">First Name:</label>
  <input class="form-control" type="text" name="first_name" value="<%= @person.first_name%>" />
  </div>
  <div>
  <label for="last_name">Last Name:</label>
  <input class="form-control" type="text" name="last_name" value="<%= @person.last_name %>"/>
  </div>
  <div>
  <label for="birthdate">Birthdate:</label>
  <input class="form-control" name="birthdate" type="date" value="<%= @person.birthdate %>" />
  </div>
  <div>
  <input class="btn btn-primary" type="submit" value="Submit">
  </div>
  </div>
  </form>